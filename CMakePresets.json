{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "description": "Sets build and install directory",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/builds/${presetName}",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/${presetName}"
            },
            "warnings": {
                "dev": false
            }
        },
        {
            "name": "ninja-multi",
            "description": "Sets ninja multi-configuration",
            "inherits": [
                "base"
            ],
            "generator": "Ninja Multi-Config"
        },
        // configuration presets for gcc
        {
            "name": "gcc-debug",
            "description": "Sets ninja multi-configuration",
            "inherits": [
                "base"
            ],
            "generator": "Unix Makefiles",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            }
        },
        {
            "name": "gcc-release",
            "description": "Sets ninja multi-configuration",
            "inherits": [
                "base"
            ],
            "generator": "Unix Makefiles",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            }
        },
        // configuration presets for clang
        {
            "name": "clang-debug",
            "description": "Sets clang debug configuration",
            "inherits": [
                "base"
            ],
            "generator": "Unix Makefiles",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            }
        },
        {
            "name": "clang-release",
            "description": "Sets clang release configuration",
            "inherits": [
                "base"
            ],
            "generator": "Unix Makefiles",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            }
        },
        // configuration presets for msvc
        {
            "name": "msvc-debug",
            "description": "Sets msvc debug configuration",
            "inherits": [
                "base"
            ],
            "generator": "Visual Studio 16 2019",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "msvc-release",
            "description": "Sets msvc release configuration",
            "inherits": [
                "base"
            ],
            "generator": "Visual Studio 16 2019",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "core-build",
            "configurePreset": "base",
            "description": "inherit environment from base configuration",
            "hidden": true,
            "jobs": 8
        },
        {
            "name": "release-ninja-build",
            "configurePreset": "ninja-multi",
            "description": "release build",
            "inherits": "core-build",
            "configuration": "Release"
        },
        {
            "name": "debug-ninja-build",
            "configurePreset": "ninja-multi",
            "description": "release build",
            "inherits": "core-build",
            "configuration": "Debug"
        },
        {
            "name": "release-gcc-build",
            "configurePreset": "gcc-release",
            "description": "release build",
            "inherits": "core-build"
        },
        {
            "name": "debug-gcc-build",
            "configurePreset": "gcc-debug",
            "description": "release build",
            "inherits": "core-build"
        },
        {
            "name": "release-clang-build",
            "configurePreset": "clang-release",
            "description": "release build",
            "inherits": "core-build"
        },
        {
            "name": "debug-clang-build",
            "configurePreset": "clang-debug",
            "description": "release build",
            "inherits": "core-build"
        },
        {
            "name": "release-msvc-build",
            "configurePreset": "msvc-release",
            "description": "release build",
            "inherits": "core-build"
        },
        {
            "name": "debug-msvc-build",
            "configurePreset": "msvc-debug",
            "description": "release build",
            "inherits": "core-build"
        }
    ],
    "testPresets": [
        {
            "name": "ninja-multi-release",
            "configurePreset": "ninja-multi",
            "configuration": "Release"
        },
        {
            "name": "ninja-multi-debug",
            "configurePreset": "ninja-multi",
            "configuration": "debug"
        },
        {
            "name": "gcc-release",
            "configurePreset": "gcc-release",
            "configuration": "Release"
        },
        {
            "name": "gcc-debug",
            "configurePreset": "gcc-debug",
            "configuration": "debug"
        },
        {
            "name": "clang-release",
            "configurePreset": "clang-release",
            "configuration": "Release"
        },
        {
            "name": "clang-debug",
            "configurePreset": "clang-debug",
            "configuration": "debug"
        },
        {
            "name": "msvc-release",
            "configurePreset": "msvc-release",
            "configuration": "Release"
        },
        {
            "name": "msvc-debug",
            "configurePreset": "msvc-debug",
            "configuration": "debug"
        }
    ]
}